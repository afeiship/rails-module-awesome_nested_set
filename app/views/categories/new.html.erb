<h1>Categories#new</h1>
<p>Find me in app/views/categories/new.html.erb</p>

<%= form_for( @category) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <% f.fields_for :children do |child| %>
      <%= child.label :name %>
      <%= child.text_field :name %>
    <% end %>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>